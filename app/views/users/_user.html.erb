<article class="media">
  <figure class="media-left">
    <p class="image is-128x128">
      <%= image_tag user.get_profile_picture %>
    </p>
  </figure>
  <div class="media-content">
    <div class="content">
      <p><%= user.email %></p>
      <% if current_user.following_accepted.include? user %>
        <%= button_to "Unfollow", follows_path, class: "button", params:
      {followed_id: user.id} %>
      <% elsif current_user.following_requested.include? user %>
        <%= button_to "Remove request", follows_path, class: "button", params:
      {followed_id: user.id} %>
      <% else %>
        <%= button_to "Follow", follows_path, class: "button", params:
      {followed_id: user.id} %>
      <% end %>
    </div>
  </div>
</article>
